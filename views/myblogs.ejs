<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
   <%- include('./partials/head.ejs') %>
    <title>myblogs</title>
</head>
<body >
    <%- include('./partials/nav.ejs') %>
    
    <% if (locals.blogs) { %>
        
        <h1 class="mt-3 ms-4">My Blogs (<%= blogs.length %>) </h1>
          <div class="allblogs mt-3 ms-4">

            <div class="row row-cols-4" >
                <% blogs.forEach(blog => { %>
        
                    <div class="col me-4" >
                        <div class="card" style="width: 18rem;">
                            <img src="<%= blog.coverimage %>" 
                            class="card-img-top" alt="blog" height="200px" width="200px">
                            <div class="card-body">
                              <h5 class="card-title"> <%= blog.title %></h5>
                              <!-- <p class="card-text"> <</p> -->
                              <p>CreatedBY : <b><%= blog.owner.fullname  %></b></p>
                              <a href="/blog/<%= blog._id %>"class="btn btn-primary">View</a>
                              <a href="/blog/<%= blog._id %>"class="btn btn-success">Update</a>
                              <a href="/blog/delete/<%= blog._id %>"class="btn btn-danger">Delete</a>

                            </div>
                          </div>
            
                    </div>
                 <% }) %>
            
        
            </div>
          </div>
    
          <% } else { %>

    <h1> empty </h1>

    <% } %>

     
    <%- include('./partials/script.ejs') %>
</body>
</html>